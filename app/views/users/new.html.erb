<h1>Signup</h1>
<%= render 'error_messages' %>
<%= form_for @user do |f| %>
  <div>
    <%=f.label :email %></br>
    <%=f.text_field :email %>
  </div>
  <div>
    <%=f.label :password %></br>
    <%=f.password_field :password %>
  </div>
  <div>
    <%=f.label :password_confirmation %></br>
    <%=f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Signup" %>
<% end %>
